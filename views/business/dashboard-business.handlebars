<style>
  .content {
    padding-left: 30px;
    padding-top: 0px;
  }
  .title {
    font-weight: bold;
  }
  .card {
    margin: 10px;
    padding: 10px;
    background: white;
    border: 1px solid lightgray;
    border-radius: 4px;
    border-top: 5px solid #071C49;
    height: 38vh;
    overflow: scroll;
  }
  .task {
    background: #EBEBEB;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    padding: 10px;
    margin: 3px 0px 3px 0px;
  }
  .task-header {
    background: #59ABE3;
    color: white;
    font-weight: bold;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    padding: 10px;
    margin: 3px 0px 3px 0px;
  }
  .task-container {
    border: 10px red;
  }

  #tasks, #monthlysummary, #yearlysummary, #calendarContainer, #companysummary, #companystatistics {
    height: 38vh;
    overflow: scroll;
  }
  #calendar {
    font-size: 8pt;
    font-family: 'Roboto', sans-serif;
    height: 100%;
    width: 100%;
  }
  #calendar h2 {
    font-size: 12pt;
    font-family: 'Roboto', sans-serif;
  }
  .top-text > span {
    font-family: 'Roboto', sans-serif;
    font-size: 1.5em;
    font-weight: 100;
  } .top-text{
    text-align: center;
  }
  #companysummary > div > div:first-child {
    border-right-style: solid;
    border-right: thin solid #EBEBEB;
    padding-top: 10%;
    padding-bottom: 20%;
  }

  #companysummary > div, #companysummary > div > div {
    height: 100%;
  }

  #profilePic {
    font-size: 20px;
    text-align: center;
  }
  #settings-admin{
    visibility: hidden !important;
    height:0px !important;
    width:0px !important;
  }
</style>
<div>
  <section class="content-header">
      <div class="top-text">
        <span style="font-weight: 300; margin:0 0.2em 0 0.4em; color: rgb(32, 128, 193);">Dashboard</span>
        <span style="font-weight: 100; margin-right:0.2em; color: darkgray;">|</span>
        <span id="currentDate"></span>
      <div>
  </section>
  <section class="content">
      <div class="column">
        <div class="row">
          <div id="tasks" class="card col-md-4">
            <span class="title">Upcoming Tasks</span>
            <div class="task-container">
                <div class="task-header col-md-3">
                  Jan 18, 2017
                </div>
                <div class="task col-md-9">
                  Frank has an appointment at 3:30 PM for cleaning teeth.
                </div>
            </div>
            <div class="task-container">
                <div class="task-header col-md-3">
                  Jan 19, 2017
                </div>
                <div class="task col-md-9">
                  Jojo has an appointment at 4:30 PM for a root canal.
                </div>
            </div>
            <div class="task-container">
                <div class="task-header col-md-3">
                  Jan 19, 2017
                </div>
                <div class="task col-md-9">
                  Kyle has an appointment at 12:30 PM for a cleaning.
                </div>
            </div>
            <div class="task-container">
                <div class="task-header col-md-3">
                  Jan 19, 2017
                </div>
                <div class="task col-md-9">
                  Alan has an appointment at 1:30 PM for a whitening.
                </div>
            </div>
            <div class="task-container">
                <div class="task-header col-md-3">
                  Jan 20, 2017
                </div>
                <div class="task col-md-9">
                    Appointment with Name
                </div>
            </div>
          </div>
          <div id="monthlysummary" class="card col-md-3">
            <span class="title">Monthly Summary: Appointments</span>
            <div class="donut-widget">
              <canvas id="chart1" width="200" height="162"></canvas>
            </div>
          </div>
          <div id="yearlysummary" class="card col-md-4">
            <span class="title">Yearly Summary: Appointments</span>
            <div class="line-widget">
              <canvas id="chart2" width="200" height="120"></canvas>
            </div>
          </div>
        </div>
        <div class="row">
          <div id="calendarContainer" class="card col-md-4">
            <div id='calendar'></div>
          </div>
          <div id="companysummary" class="card col-md-4">
            <span class="title">Profile Summary</span>
            <div class="row">
              <div class="col-md-6">
                <div id="profilePic">
                  {{#if logo}}
                    <div id="logo">
                      <img src="{{logo}}" alt="Logo" style="width:60%;height:60%;">
                    </div>
                  {{/if}}
                  {{#else}}
                    <div id="logo">
                      <i class="fa fa-user-circle fa-5x" aria-hidden="true"></i><br>
                    </div>
                  {{/else}}
                  <span style="font-size: 14px;">{{employeeName}}</span> <br>
                  <span style="font-size: 14px;">Role</span> <br>
                  <span style="font-size: 14px;">{{companyName}}</span> <br>
                </div>
              </div>
              <div class="col-md-6">
                <span style="font-size: 12px;">Last Login: June 14, 2016</span> <br>
                <span style="font-size: 12px;">Email: {{email}}</span> <br>
                <span style="font-size: 12px;">Phone: {{phone}}</span> <br>
              </div>
            </div>
          </div>
          <div id="companystatistics" class="card col-md-3">
            <span class="title">Company Statistics</span>
              <div class="pie-widget">
                <canvas id="chart3" width="200" height="200"></canvas>
              </div>
          </div>
        </div>
      </div>
  </section>
</div>
