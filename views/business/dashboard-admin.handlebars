<style>
  #calendar {
      font-size: 8pt;
      font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;
  }
  #calendar h2 {
      font-size: 12pt;
      font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;
  }
  .top-buffer { margin-bottom:40px; }
</style>

<section class="content-header">
  <div class="dash-header">
    <h2 style="display:inline-block;">Dashboard </h2>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" style="display:inline-block; position:absolute; right: 10px;"><i class="fa fa-cogs" aria-hidden="true"></i></button>
  </div>
</section>

<section>
  <div id="test">
    <h4> Test - Display Appointments from DB </h4>
    <button onclick="getData()">Click me</button>
    <p id="appointments"></p>
  </div>
</section>

<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Configure Dashboard</h4>
      </div>
      <div class="modal-body">
        <div>
          <h2 style="text-align: center;">Graphs</h2>
          <div style="text-align: center;">
            <i class="fa fa-line-chart fa-2x" aria-hidden="true"></i>
          </div>
          <div class="row" style="margin-left: 20px;row top-buffe">
            <h4 style="float: left;">Show Number of Users Online Per Month</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;">
            <h4 style="float: left;">Show Appointments Missed vs Appointments On Time</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;">
            <h4 style="float: left;">Show Reason for Appointment</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;">
            <h4 style="float: left;">Show Method of Communication</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;">
            <h4 style="float: left;">Show Rating received in feedback</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <h2 style="text-align: center;">Calendar</h2>
          <div style="text-align: center;">
            <i class="fa fa-calendar fa-2x" aria-hidden="true"></i>
          </div>
          <div class="row" style="margin-left: 20px;row top-buffe">
            <h4 style="float: left;">Show Calendar</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;row top-buffe">
            <h4 style="float: left;">Show All Appointments</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <h2 style="text-align: center;">Other</h2>
          <div style="text-align: center;">
            <i class="fa fa-list fa-2x" aria-hidden="true"></i>
          </div>
          <div class="row" style="margin-left: 20px;row top-buffe">
            <h4 style="float: left;">Show Users Online</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;row top-buffe">
            <h4 style="float: left;">Show Most Viewed Pages</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;row top-buffe">
            <h4 style="float: left;">Show Time</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
          <div class="row" style="margin-left: 20px;row top-buffe">
            <h4 style="float: left;">Show Date</h4>
            <div style="float: right; margin-right: 30px;">
              <input type="checkbox" checked data-toggle="toggle">
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer"> </div>
    </div>

  </div>
</div>

<section class="content">
  <div class="dash-wrapper">
    <div class="row top-buffer">
      <div class="col-md-3 card">
        <div class="pie-widget">
          <canvas id="chart1"></canvas>
        </div>
      </div>
      <div class="col-md-3 card">
        <div class="pie-widget">
          <canvas id="chart4"></canvas>
        </div>
      </div>
      <div class="col-md-3 card">
        <div class="pie-widget">
          <canvas id="chart3"></canvas>
        </div>
      </div>
      <div class="col-md-3 card">
        <div class="pie-widget">
          <canvas id="chart5"></canvas>
        </div>
      </div>

    </div>
    <div class="row top-buffer">
      <div class="col-md-12">
        <div class="card text-center user-chart">
          <canvas id="chart2"></canvas>
        </div>
      </div>

    </div>
    <div class="row top-buffer">
      <div class="card-wrapper">
        <div class="col-md-2">
          <div class="stat-widget">
          <div class="card text-center text-card">
            <h3 class="card-header">Users Online</h3>
            <i class="fa fa-users fa-2x" aria-hidden="true"></i>
            <div class="card-block">
              <h1 class="card-title">5</h1>
            </div>
          </div>
        </div>
        </div>
        <div class="col-md-6">
          <div class="stat-widget">
          <div class="card text-center">
            <h3 class="card-header">Most Viewed Pages</h3>
            <i class="fa fa-eye fa-2x" aria-hidden="true"></i>
            <div class="card-block">
              <div style="padding-left: 50px; padding-right:50px; padding-bottom: 40px; font-size: 22px;">
                <span style="float: left;">/dashboard</span>
                <b style="float: right;">25 views</b> <br>
                <span style="float: left;">/index</span>
                <b style="float: right;">5 views</b><br>
                <span style="float: left;">/login</span>
                <b style="float: right;">25 views</b><br>
              </div>
              <div style="padding-bottom: 10px;">
                <button type="button" class="btn btn-danger">Daily</button>
                <button type="button" class="btn btn-default">Weekly</button>
                <button type="button" class="btn btn-default">Monthly</button>
              </div>
            </div>
          </div>
          </div>
        </div>
        <div class="col-md-4 card">
          <div class="stat-widget">

          <div class="card text-center">
            <h4 style="text-align: center;">Upcoming Appointments</h4>
            <div style="width: 100%">
              <div id='calendar'></div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
</section>
