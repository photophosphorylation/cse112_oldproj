<section class="content">
  {{#if message}}
  <div class="alert alert-danger">{{message}}</div>
  {{/if}}

  <div id="add-employee-modal" class="modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close add-employee-hide" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title">Add Customer</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              <div class="box box-primary">
                <div class="box-body">
                  <form method="post" action="customers" enctype="application/x-www-form-urlencoded">
                    <div class="form-group">
                        <label for="firstName" class="control-label"><span style="color: red">* </span>First Name</label>
                        <input id="inputFirstName" class="form-control" type="text" name="inputFirstName" value="{{ firstName }}" required>

                        <label for="lastName" class="control-label"><span style="color: red">* </span>Last Name</label>
                        <input id="inputLastName" class="form-control" type="text" name="inputLastName" value="{{ lastName }}" required>

                        <label for="email" class="control-label"><span style="color: red">* </span>Email</label>
                        <input id="inputEmail" class="form-control" type="text" name="inputEmail" value="{{ email }}" required>

                        <label for="phone" class="control-label"><span style="color: red">* </span>Phone</label>
                        <input id="inputPhone" class="form-control" type="text" name="inputPhone" value="{{ phone }}" required>

                        <label for="address" class="control-label"><span style="color: red">* </span>Address</label>
                        <input id="inputAddress" class="form-control" type="text" name="inputAddress" value="{{ address }}" required>

                        <label for="age" class="control-label"><span style="color: red">* </span>Age</label>
                        <input id="inputAge" class="form-control" type="text" name="inputAge" value="{{ age }}" required>
                    </div>
                    <input class="btn btn-block btn-primary btn-lg btn-flat" name="submit" type="submit" href="/customers" value="Add Customer">
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left add-employee-hide" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="box box-success">
      <div class="box-header with-border">
        <h3 class="box-title">Registered Customers</h3>
      </div>
      <div class="box-body">
        <table class="table table-striped" id="registeredEmployees">
          <tbody>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
            </tr>
            {{#each customers}}
            <tr>
              <td>{{firstName}} {{lastName}}</td>
              <td>{{email}}</td>
              <td>{{phone}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <button id="add-employee-show">+</button>
  <script>
  document.getElementById('add-employee-show').addEventListener('click', function() {
    document.getElementById('add-employee-modal').style.display = 'block';
  });

  var closers = document.getElementsByClassName('add-employee-hide');
  for (var i=0, len=closers.length; i<len; i++) {
    closers[i].addEventListener('click', function() {
      document.getElementById('add-employee-modal').style.display = 'none';
    });
  }
  </script>
</section>
